{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		/* Strictness */
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		/* Bundled projects */
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"incremental": true,
		/* Path Aliases */
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
